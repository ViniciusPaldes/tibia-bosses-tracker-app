{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]           // @/theme/theme -> theme/theme.ts
    },
    "skipLibCheck": true     // ajuda a evitar ru√≠do de tipagem de libs
  },
  "include": [
    "app",
    "theme",
    "types/**/*.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}